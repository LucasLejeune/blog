{% extends 'base.html.twig' %}

{% block title %}Liste d'articles de la catégorie{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des articles de la catégorie: <i>{{articles[0].categorie.libelle}}</i> </h1>
    <ul>
    {% for article in articles %}
        <li> <a href="{{ path('app_article',{'id': article.id}) }}">{{article.titre}} </a> </li>
    {% endfor %}
    </ul>
</div>
{% endblock %}
