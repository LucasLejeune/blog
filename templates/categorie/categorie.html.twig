{% extends 'base.html.twig' %}

{% block title %}Liste d'articles de la catégorie{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    body { background-image: url({{ categorie.fond }});
    background-size: cover;
    text-shadow: 1px 1px 2px white, 0 0 1em white, 0 0 0.2em white; }
</style>

<div class="example-wrapper">
    <h1>Liste des articles de la catégorie: <i>{{categorie}}</i></h1> 
    <ul>
    {% for article in categorie.articles %}
        <li> <a href="{{ path('app_article',{'id': article.id}) }}">{{article.titre}} </a> </li>
        {% else %}
        <p>Il n'y a pas d'articles dans cette catégorie</p>
    {% endfor %}
    </ul>
    <br><br>    
    <p>Envie d'autres choses ? <a href="{{ path('app_categories') }}">Cherchez dans la liste de catégories !</a></p>
</div>
{% endblock %}
