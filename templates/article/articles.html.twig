{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="main">
    <h1>Liste des articles</h1>
        <ul>
        {% for article in articles %}
            <li><a href="{{ path('app_article',{'id': article.id}) }}">Article: {{article.id}} - {{article.titre}} - {{article.dateCreation|date("d/m/Y H:i:s")}} </a></li>
        {% endfor %}
        </ul>
    </div>
{% endblock %}